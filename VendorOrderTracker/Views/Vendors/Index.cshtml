@{
  Layout = "_Layout";
}
@using VendorOrderTracker.Models;

  <h2>Vendors</h2>
  @if (@Model.Count == 0)
  {
    <h5>No vendors have been added yet.</h5>
  } 
  <ul>
  @if (@Model.Count > 0)
  {
    <h5>Please select the vendor you would like to view or add an order to</h5>
    <p>To update a vendor's information, view the vendor's page</p>
    @foreach (Vendor vendor in Model)
    {
      <li><h5><a href='/vendors/@vendor.Id'>@vendor.Name (@vendor.Description)</a></h5></li>
    }
    <br>
    <form action="/vendors/deleteall" method="post">
      <button type="submit" name="button">Delete all vendors</button>
    </form>
  }
  </ul>
  <br>
  <p><a href="/vendors/new">Add a new vendor</a></p>
  <p><a href='/'>Return to main page</a></p>